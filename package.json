{
    "name": "myshop",
    "version": "1.0.0",
    "description": "MERN shopping cart app",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "node backend/server",
        "server": "nodemon backend/server",
        "client": "npm start --prefix frontend",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "dev2": "start npm run server & start npm run client",
        "data:import": "node backend/seeder",
        "data:destroy": "node backend/seeder -d",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mbihrle/myshop.git"
    },
    "author": "Marco Bihrle",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mbihrle/myshop/issues"
    },
    "homepage": "https://github.com/mbihrle/myshop#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-async-handler": "^1.2.0",
        "mongoose": "^6.2.4"
    },
    "devDependencies": {
        "concurrently": "^7.0.0",
        "nodemon": "^2.0.15"
    }
}
